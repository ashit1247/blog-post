<%- include('partials/header') %>

<h1>Home</h1>
<%= homeContent %>

<%postItem.forEach(function(postItem){%>
<h1><%= postItem.title %></h1>
<p>
  <%= postItem.body.substr(0, 100) + " ..." %>
  <a href="/posts/<%= postItem.title %>">Read more</a>
</p>
<%})%>

<button class="btn btn-primary" type="button" name="button">
  <a href="/compose" style="text-decoration:none, color:white">Post your blog</a>
</button>


<%- include('partials/footer') %>
